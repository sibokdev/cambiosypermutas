
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="app.oficiodigital.cliente.fragments.Perfil_Fragmen">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/perfil">

        <ScrollView
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Datos personales"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:padding="10dp"
                        android:textSize="25dp"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Foto de perfil"
                        android:textSize="18dp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginTop="10dp"
                        android:id="@+id/fotos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/perfil"
                        app:civ_border_width="5dp"
                        app:civ_border_color="#00000000"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:textColor="#535252"
                        android:textSize="18dp"
                        android:padding="5dp"
                        android:text="Nombre"/>
                    <TextView
                        android:id="@+id/nombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:textColor="#a6a2a2"
                        android:textSize="18dp"
                        android:padding="5dp"
                        android:text="Aparece nombre"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:clickable="true"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:textColor="#535252"
                        android:textSize="18dp"
                        android:layout_marginEnd="20dp"
                        android:padding="5dp"
                        android:text="Correo electronico"/>
                    <TextView
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:textColor="#a6a2a2"
                        android:textSize="18dp"
                        android:clickable="false"
                        android:layout_marginEnd="20dp"
                        android:padding="5dp"
                        android:drawableRight="@drawable/ic_edit"
                        android:text="Aparece correo electronico"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_telefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:textColor="#535252"
                        android:layout_marginEnd="20dp"
                        android:textSize="18dp"
                        android:padding="5dp"
                        android:text="Telefono"/>
                    <TextView
                        android:id="@+id/phone1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:textColor="#a6a2a2"
                        android:padding="5dp"
                        android:drawableRight="@drawable/ic_edit"
                        android:textSize="18dp"
                        android:layout_marginEnd="20dp"
                        android:text="Aparece Telefono"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_phone2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:textColor="#535252"
                        android:textSize="18dp"
                        android:padding="5dp"
                        android:text="Telefono 2"/>
                    <TextView
                        android:id="@+id/phone2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:textColor="#a6a2a2"
                        android:padding="5dp"
                        android:textSize="18dp"
                        android:layout_marginEnd="20dp"
                        android:drawableRight="@drawable/ic_add_circle"
                        android:text="Agregar segundo telefono"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_direccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:textColor="#535252"
                        android:layout_marginEnd="20dp"
                        android:textSize="18dp"
                        android:padding="5dp"
                        android:text="Dirección"/>
                    <TextView
                        android:id="@+id/dirrecion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:textColor="#a6a2a2"
                        android:layout_marginEnd="20dp"
                        android:padding="5dp"
                        android:textSize="18dp"
                        android:drawableRight="@drawable/ic_edit"
                        android:text="Aparece Dirección"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/id_datos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/id_datos1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/foto2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>


</LinearLayout>