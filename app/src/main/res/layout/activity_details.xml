<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Details">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <include android:id="@+id/toolbar" layout="@layout/toolbar"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_marginTop="50dp"
            android:background="@mipmap/perfil"
            android:layout_height="150dp"/>
        <TextView
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textAllCaps="true"
            android:gravity="center"
            android:textSize="18dp"
            android:text="Nombre" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/apellido1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginStart="20dp"
                android:textAllCaps="true"
                android:gravity="center"
                android:textSize="18dp"
                android:text="Apellido Paterno" />
            <TextView
                android:id="@+id/apellido2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textAllCaps="true"
                android:gravity="center"
                android:textSize="18dp"
                android:text="Apellido Materno" />


        </LinearLayout>

        <TextView
            android:id="@+id/des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAllCaps="true"
            android:gravity="center"
            android:textSize="18dp"
            android:text="INTRODUCCIÓN DEL PROVEEDOR" />
        <TextView
            android:id="@+id/oficio"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:text="Oficio" />
        <TextView
            android:id="@+id/municipio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="18dp"
            android:text="Municipio" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="18dp"
            android:text="Calificación" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:numStars="5"
            android:rating="3.5"
            android:stepSize="0.5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:padding="10dp"
            android:text="COMENTARIOS" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:textSize="18dp"
            android:text="Nombre del que dejo el comentario " />
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:numStars="5"
            android:rating="3"
            android:layout_marginStart="20dp"
            android:layout_gravity="left"
            android:stepSize="1.5"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMENTARIO"
            android:layout_marginStart="20dp"
            android:textSize="18dp"
            android:padding="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FECHA"
            android:layout_marginStart="20dp"
            android:padding="10dp"
            android:textSize="15dp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cotizacion"
            android:onClick="cotizacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/boton_redondo"
            android:textSize="18dp"
            android:padding="10dp"
            android:text="Solicitar cotización" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"/>
        <TextView
            android:id="@+id/token"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/phone"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/phone1"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>




    </LinearLayout>




</ScrollView>