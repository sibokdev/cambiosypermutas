<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AnswerQuestions">

    <include android:id="@+id/toolbar" layout="@layout/toolbar"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/tv_pregunta1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:text="Primera pregunta ya seleccionada"
            android:textSize="18dp"
            android:textColor="#070707"
            android:padding="20dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ti_p1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="90dp">

            <EditText
                android:id="@+id/pregunta1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="30"
                android:hint="Ingresa respuesta"/>
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/tv_pregunta2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Segunda pregunta ya seleccionada"
            android:textSize="18dp"
            android:textColor="#070707"
            android:padding="20dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ti_p2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="90dp">

            <EditText
                android:id="@+id/pregunta2"
                android:maxLength="30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Ingresa respuesta"/>
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.cardview.widget.CardView>
<androidx.appcompat.widget.AppCompatButton
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:text="Siguiente"
        android:gravity="center"
        android:onClick="siguiente"
        android:textColor="@color/text_white"
        android:background="@drawable/boton_redondo"
        android:textSize="17dp">
        </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancelar_change_resp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="-50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="185dp"
        android:text="cancelar"
        android:gravity="center"
        android:textColor="@color/text_white"
        android:background="@drawable/boton_redondo"
        android:textSize="17dp">
    </androidx.appcompat.widget.AppCompatButton>



    <TextView
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>


</LinearLayout>