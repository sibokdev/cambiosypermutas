                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="350dp"
                    android:layout_below="@+id/ti1">

                    <EditText
                        android:id="@+id/et_zona"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ingresa Zona:"
                        android:layout_marginEnd="50dp"
                        android:maxLength="20"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ti_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="410dp"
                    android:layout_below="@+id/ti1">

                    <EditText
                        android:id="@+id/et_tel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ingresa Telefono:"
                        android:layout_marginEnd="50dp"
                        android:maxLength="10"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ti_codigop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="470dp"
                    android:layout_below="@+id/ti2">

                    <EditText
                        android:id="@+id/et_codigop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ingresa CÃ³digo Postal:"
                        android:layout_marginEnd="50dp"
                        android:maxLength="5"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_marginTop="530dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Seleciona Colonia:"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="50dp"
                    android:textSize="18dp"
                    android:padding="10dp"
                    android:inputType="text" />
                <Spinner
                    android:id="@+id/sp_colonia"
                    android:layout_marginTop="570dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
