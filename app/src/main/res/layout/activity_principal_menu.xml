                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="50dp"/>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
