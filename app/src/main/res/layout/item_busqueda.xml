        <TextView
            android:id="@+id/tv_match"
            android:layout_marginTop="10dp"
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:layout_marginStart="-30dp"
            android:gravity="center"
            android:text="Match encontrado"
            android:textStyle="bold|normal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/button_bg_light_green"
            android:textSize="20dp" />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-330dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_prueba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nombre(s)"
                android:padding="10dp"
                android:textColor="#008577"
                android:textAppearance="?android:attr/textAppearanceLarge"
               android:textStyle="bold"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/tv_nombre"
                android:layout_width="220dp"
                android:layout_height="45dp"
                android:padding="10dp"
                android:text="Lugar de trabajo actual:"
                android:textSize="18dp"
                android:textStyle="bold|normal" />

            <TextView
                android:id="@+id/estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="lugar de trabajo actual"
                android:textAllCaps="true"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_nivel"
                android:layout_width="220dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="Nivel escolar:"
                android:textSize="18dp"
                android:textStyle="bold|normal" />

            <TextView
                android:id="@+id/nivel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:padding="5dp"
                android:text="Nivel escolar"
                android:textAllCaps="true"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/tv_rol"
                android:layout_width="220dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="Rol o puesto:"
                android:textSize="18dp"
                android:textStyle="bold|normal" />

            <TextView
                android:id="@+id/rol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Rol escolar"
                android:textAllCaps="true"
                android:textSize="14dp"
                android:layout_marginStart="5dp"
                />

            <TextView
                android:id="@+id/tv_tipo"
                android:layout_width="220dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="Tipo de escuela:"
                android:textSize="18dp"
                android:textStyle="bold|normal" />

            <TextView
                android:id="@+id/tipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Tipo escuela"
                android:textAllCaps="true"
                android:textSize="14dp"
                android:layout_marginStart="5dp"/>

            <Button
                android:id="@+id/detalles"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_redondo"
                android:textColor="@color/text_white"
                android:text="Ver detalles"/>




