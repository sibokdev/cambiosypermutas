<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.DataSchool">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/perfil">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="1050dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    app:cardBackgroundColor="@color/white">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:padding="15dp"
                        android:text="Datos de tu Escuela Actual"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/button_bg_dark_green"
                        android:textSize="25dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ti_nombre_escuela"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ti1"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="50dp">

                        <EditText
                            android:id="@+id/et_nombre_escuela"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="50dp"
                            android:hint="Ingrese el nombre de la escuela:"
                            android:inputType="textPersonName|textCapWords"
                            android:maxLength="50" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ti_clave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ti2"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="125dp">

                        <EditText
                            android:id="@+id/et_clave"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="50dp"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
                            android:hint="Ingresa Clave de la escuela:"
                            android:inputType="textCapCharacters"
                            android:maxLength="10" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="200dp"
                        android:layout_marginEnd="50dp"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text="Nivel escolar:"
                        android:textSize="18dp" />

                    <Spinner
                        android:id="@+id/sp_nivel_esc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="230dp"
                        android:layout_marginEnd="50dp"
                        android:spinnerMode="dialog"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="270dp"
                        android:layout_marginEnd="50dp"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text="Seleciona Turno:"
                        android:textSize="18dp" />

                    <Spinner
                        android:id="@+id/sp_turno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="300dp"
                        android:layout_marginEnd="50dp"
                        android:spinnerMode="dialog" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ti_zona"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ti1"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="350dp">

                        <EditText
                            android:id="@+id/et_zona"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="50dp"
                            android:hint="Ingresa Zona:"
                            android:inputType="text"
                            android:maxLength="20" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ti_tel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ti1"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="410dp">

                        <EditText
                            android:id="@+id/et_tel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="50dp"
                            android:hint="Ingresa Telefono de escuela:"
                            android:inputType="number"
                            android:maxLength="10" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ti_codigop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ti2"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="470dp">

                        <EditText
                            android:id="@+id/et_codigop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="50dp"
                            android:hint="Ingresa Código Postal:"
                            android:inputType="number"
                            android:maxLength="5" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="530dp"
                        android:layout_marginEnd="50dp"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text="Seleciona Colonia:"
                        android:textSize="18dp" />

                    <Spinner
                        android:id="@+id/sp_colonia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="570dp"
                        android:layout_marginEnd="50dp" />


                    <TextView
                        android:id="@+id/municipio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="620dp"
                        android:layout_marginEnd="50dp"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text="Municipio:"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_municipio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="660dp"
                        android:layout_marginEnd="50dp"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text=""
                        android:textSize="18dp" />


                    <TextView
                        android:id="@+id/estado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="710dp"
                        android:layout_marginEnd="50dp"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text="Estado:"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_estado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="740dp"
                        android:layout_marginEnd="50dp"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text=""
                        android:textSize="18dp" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ti_nom_dir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ti2"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="800dp">

                        <EditText
                            android:id="@+id/et_nom_dir"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="50dp"
                            android:hint="Ingresa Nombre del Director*"
                            android:inputType="textPersonName|textCapWords"
                            android:maxLength="30" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="890dp"
                        android:layout_marginEnd="50dp"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text="Seleciona Categoria:"
                        android:textSize="18dp" />

                    <Spinner
                        android:id="@+id/sp_categoria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="930dp"
                        android:layout_marginEnd="50dp"
                        android:spinnerMode="dialog" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="970dp"
                        android:layout_marginEnd="50dp"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text="Seleciona el Tipo de Plantel:"
                        android:textSize="18dp" />

                    <Spinner
                        android:id="@+id/sp_plantel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="1000dp"
                        android:layout_marginEnd="50dp"
                        android:spinnerMode="dialog" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="603dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    app:cardBackgroundColor="@color/white">

                    <TextView
                        android:id="@+id/tv_nombra"
                        android:layout_width="match_parent"
                        android:layout_height="69dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="50dp"

                        android:lines="2"
                        android:padding="10dp"
                        android:text="¿Tienes nombramiento
                    definitivo?"
                        android:textSize="18dp" />

                    <Spinner
                        android:id="@+id/sp_nombramiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="80dp"
                        android:layout_marginEnd="50dp"
                        android:spinnerMode="dialog"/>

                    <TextView
                        android:id="@+id/tvInvisibleError"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_alignRight="@+id/spnMySpinner"
                        android:layout_alignBottom="@+id/spnMySpinner"
                        android:layout_marginTop="120dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:paddingTop="0dp"
                        android:paddingRight="50dp" />

                    <TextView
                        android:id="@+id/tv_anios"
                        android:layout_width="match_parent"
                        android:layout_height="69dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="140dp"
                        android:layout_marginEnd="50dp"
                        android:justificationMode="inter_word"
                        android:lines="2"
                        android:max="50"
                        android:padding="10dp"
                        android:progress="1"
                        android:text="¿Cuantós años llevas laborando
                    en esta escuela?"
                        android:textSize="18dp" />

                    <SeekBar
                        android:id="@+id/seekBar_anios"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="230dp"
                        android:layout_marginEnd="50dp"

                        android:max="10" />

                    <TextView
                        android:id="@+id/tv_salida"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="260dp"
                        android:layout_marginEnd="50dp"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text=""
                        android:textSize="18dp" />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="69dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="350dp"
                        android:layout_marginEnd="50dp"
                        android:justificationMode="inter_word"
                        android:lines="2"
                        android:padding="10dp"
                        android:text="¿Tienes alguna nota desfavorable
en esta escuela"
                        android:textSize="18dp" />

                    <Spinner
                        android:id="@+id/sp_not_desf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="400dp"
                        android:layout_marginEnd="50dp"
                        android:spinnerMode="dialog"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="69dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="450dp"
                        android:layout_marginEnd="50dp"
                        android:justificationMode="inter_word"
                        android:lines="2"
                        android:padding="10dp"
                        android:text="¿Estas sujeto a
procedimiento administrativo?"
                        android:textSize="18dp" />

                    <Spinner
                        android:id="@+id/sp_proc_Adm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="490dp"
                        android:layout_marginEnd="50dp"
                        android:spinnerMode="dialog"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/guardar"
                            android:layout_width="170dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="85dp"
                            android:layout_marginTop="550dp"
                            android:layout_marginEnd="40dp"
                            android:background="@drawable/boton_redondo"
                            android:gravity="center"
                            android:text="guardar"
                            android:textSize="17dp"
                            android:textColor="@color/text_white" />

                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/select1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/select2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"/>

            </LinearLayout>

        </ScrollView>
    </RelativeLayout>

</FrameLayout>