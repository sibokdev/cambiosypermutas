<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FragmentInteres">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/intereses">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="600dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:padding="15dp"
                        android:textStyle="bold"
                        android:text="Lugares de interés"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/button_bg_dark_green"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Los lugares de interés son los estados o sitios donde
te gustaría realizar tu cambio o permuta, puedes modificarlos cuando
quieras, estos datos nos ayudan a realizar la búsqueda de acuerdo a tus intereses."
                        android:gravity="center"
                        android:textSize="14dp"
                        android:justificationMode="inter_word"
                        android:padding="10dp"
                        android:layout_marginTop="50dp"
                        android:textColor="#F4511E"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="150dp"
                        android:gravity="left"
                        android:padding="15dp"
                        android:text="Primer lugar de interés"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/button_bg_dark_green"
                        android:textSize="20dp" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ti_codigop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ti2"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="210dp">

                        <EditText
                            android:id="@+id/et_codigop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="50dp"
                            android:hint="Ingrese Código Postal:"
                            android:inputType="number"
                            android:maxLength="5" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="290dp"
                        android:layout_marginEnd="50dp"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text="Selecione Colonia:"
                        android:textSize="18dp" />

                    <Spinner
                        android:id="@+id/sp_colonia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="335dp"
                        android:layout_marginEnd="50dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="370dp"
                        android:layout_marginEnd="50dp"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text="Municipio:"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/municipio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="410dp"
                        android:layout_marginEnd="50dp"
                        android:inputType="textNoSuggestions"
                        android:padding="10dp"
                        android:text=""
                        android:textSize="18dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="470dp"
                        android:layout_marginEnd="50dp"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text="Estado:"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/estado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="510dp"
                        android:layout_marginEnd="50dp"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text=""
                        android:textSize="18dp" />


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="10dp"
                    app:cardBackgroundColor="@color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:gravity="left"
                        android:padding="15dp"
                        android:text="Segundo lugar de interés"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/button_bg_dark_green"
                        android:textSize="20dp" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ti_codigop2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ti2"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="100dp">

                        <EditText
                            android:id="@+id/et_codigop2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="50dp"
                            android:hint="Ingresa Código Postal:"
                            android:inputType="number"
                            android:maxLength="5" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="170dp"
                        android:layout_marginEnd="50dp"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text="Selecione Colonia:"
                        android:textSize="18dp" />

                    <Spinner
                        android:id="@+id/sp_colonia2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="215dp"
                        android:layout_marginEnd="50dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="260dp"
                        android:layout_marginEnd="50dp"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text="Municipio:"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/municipio2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="300dp"
                        android:layout_marginEnd="50dp"
                        android:inputType="textNoSuggestions"
                        android:padding="10dp"
                        android:text=""
                        android:textSize="18dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="360dp"
                        android:layout_marginEnd="50dp"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text="Estado:"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/estado2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="400dp"
                        android:layout_marginEnd="50dp"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text=""
                        android:textSize="18dp" />
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="10dp"
                    app:cardBackgroundColor="@color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:gravity="left"
                        android:padding="15dp"
                        android:text="Tercer lugar de interés"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/button_bg_dark_green"
                        android:textSize="20dp" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ti_codigop3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ti2"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="100dp">

                        <EditText
                            android:id="@+id/et_codigop3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="50dp"
                            android:hint="Ingresa Código Postal:"
                            android:inputType="number"
                            android:maxLength="5" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="170dp"
                        android:layout_marginEnd="50dp"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text="Selecione Colonia:"
                        android:textSize="18dp" />

                    <Spinner
                        android:id="@+id/sp_colonia3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="215dp"
                        android:layout_marginEnd="50dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="260dp"
                        android:layout_marginEnd="50dp"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text="Municipio:"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/municipio3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="300dp"
                        android:layout_marginEnd="50dp"
                        android:inputType="textNoSuggestions"
                        android:padding="10dp"
                        android:text=""
                        android:textSize="18dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="360dp"
                        android:layout_marginEnd="50dp"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text="Estado:"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/estado3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="400dp"
                        android:layout_marginEnd="50dp"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text=""
                        android:textSize="18dp" />

                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_guardar"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/boton_redondo"
                    android:text="Guardar"
                    android:padding="10dp"
                    android:textColor="@color/text_white"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/select2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/select3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

            </LinearLayout>


        </ScrollView>
    </RelativeLayout>

</FrameLayout>