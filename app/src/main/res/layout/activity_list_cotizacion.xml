<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ListCotizacion">

    <include android:id="@+id/toolbar" layout="@layout/toolbar"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de cotizaciones"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:padding="10dp"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <EditText
        android:id="@+id/mate1"
        android:layout_width="320dp"
        android:layout_marginStart="20dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Ingresa material"/>

        <TextView
            android:id="@+id/m1"
            android:onClick="material1"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add_circle"
            tools:ignore="OnClick" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll1"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/mate2"
            android:layout_width="320dp"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Ingresa material"
             />

        <TextView
            android:onClick="material2"
            tools:ignore="OnClick"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add_circle"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll3"
        android:visibility="gone"
        android:layout_below="@+id/ll2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/mate3"
            android:layout_width="320dp"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Ingresa material" />

        <TextView
            android:onClick="material3"
            tools:ignore="OnClick"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add_circle"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll4"
        android:visibility="gone"
        android:layout_below="@+id/ll3"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/mate4"
            android:layout_width="320dp"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Ingresa material" />

        <TextView
            android:onClick="material4"
            tools:ignore="OnClick"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add_circle"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll5"
        android:visibility="gone"
        android:layout_below="@+id/ll4"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/mate5"
            android:layout_width="320dp"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Ingresa material" />

        <TextView
            android:onClick="material5"
            tools:ignore="OnClick"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add_circle"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll6"
        android:visibility="gone"
        android:layout_below="@+id/ll5"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/mate6"
            android:layout_width="320dp"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Ingresa material" />

        <TextView
            android:onClick="material6"
            tools:ignore="OnClick"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add_circle"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll7"
        android:visibility="gone"
        android:layout_below="@+id/ll6"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/mate7"
            android:layout_width="320dp"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Ingresa material" />

        <TextView
            android:onClick="material7"
            tools:ignore="OnClick"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add_circle"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll8"
        android:visibility="gone"
        android:layout_below="@+id/ll7"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/mate8"
            android:layout_width="320dp"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Ingresa material" />

        <TextView
            android:onClick="material8"
            tools:ignore="OnClick"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add_circle"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/lista"
        android:layout_width="match_parent"
        android:layout_below="@+id/ll8"
        android:layout_marginTop="10dp"
        android:textColor="@color/cardview_light_background"
        android:text="Guardar"
        android:onClick="listaCoti"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/boton_redondo"
        android:layout_height="wrap_content"
        tools:ignore="OnClick" />

</RelativeLayout>